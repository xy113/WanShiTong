/**index.wxss**/

.tabs{
  display: flex;
  background-color: #fff;
  height: 40px;
  line-height: 40px;
  margin: 10px 0;
}

.tabs .tab{
  flex: 1;
  width: 50%;
  min-width: 50%;
  max-width: 50%;
  text-align: center;
  font-size: 14px;
  color: #333;
  line-height: 40px;
}

.tabs .on{
  color: #0097D0;
  border-bottom: 2px #0097D0 solid;
}

.hidden{
  display: none;
}