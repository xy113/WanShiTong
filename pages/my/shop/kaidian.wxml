<view class="form">
  <form>
  <view class='row'>
    <view class='label'>门店名称<text>*</text></view>
    <view>
      <input type='text' class='text' placeholder='请输入门店名称'></input>
    </view>
  </view>

  <view class='row'>
    <view class='label'>联系电话<text>*</text></view>
    <view>
      <input type='text' class='text' placeholder='请输入联系电话'></input>
    </view>
  </view>

  <view class='row'>
    <view class='label'>店长姓名<text>*</text></view>
    <view>
      <input type='text' class='text' placeholder='请输入店长姓名'></input>
    </view>
  </view>

  <view class='row noborder'>
    <view class='label'>门店logo<text>*</text></view>
    <view class='tips'>(建议尺寸300px*300px，JPG格式)</view>
  </view>
  <view class='row'>
    <view class='addbox'>
      <view class='addbutton'></view>
    </view>
  </view>

  <view class='row noborder'>
    <view class='label'>门头照片<text>*</text></view>
    <view class='tips'>(建议尺寸1200px*600px，JPG格式)</view>
  </view>
  <view class='row'>
    <view class='addbox'>
      <view class='addbutton'></view>
    </view>
  </view>

  <view class='row'>
    <view class='label'>所在位置<text>*</text></view>
    <view>
      <input type='text' class='text' placeholder='选择门店所在位置' bindtap='chooseLocation' readonly></input>
    </view>
  </view>
  <view class='row noborder'>
    <view class='label'>门店介绍<text>*</text></view>
  </view>
  <view class='row noborder'>
    <textarea class='textarea' placeholder='简单介绍一下你的门店'></textarea>
  </view>

  <button class='submit'>提交</button>
  </form>
</view>
