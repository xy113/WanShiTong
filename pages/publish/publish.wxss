/* pages/publish/publish.wxss */
.container{
  background-color: #f2f2f2;
}

.section{
  background-color: #fff;
  display: block;
  padding: 10px;
  border-bottom: 1px #e7e7e7 solid;
}

.section::after{
  content: "";
  display: block;
  overflow: hidden;
  clear: both;
}

.textarea{
  display: block;
  height: 160px;
  font-size: 14px;
}

.wx-tips{
  background-color: #e5e5e5;
  padding: 10px; font-size: 14px;
}

.icon{
  width: 25px; height: 25px;
  max-width: 25px; float: left;
  margin-right: 3px;
  vertical-align: middle;
}

.input-text{
  font-size: 14px;
}

.text{font-size: 14px;}

.section .switch{
  float: right;
  font-size: 16px;
  height: 30px;
}

.publish-wrap{
  padding: 40px 20px;
  display: block;
}

.publish-wrap .button{
  background-color: #00C858;
  color: #fff;
}

.section .hidden{
  display: none;
}

.image-list{
  display: flex; 
  flex-flow: row wrap;
  padding: 5px;
}

.image-list .item{
  min-width: 25%;
  max-width: 25%;
  width: 25%;
  flex: 1;
  display: block;
}
.image-list .item .hd{
  display: block;
  margin: 5px;
}
.image-list .item .c{
  position: relative;
  display: block;
  padding-top: 100%;
}

.image-list .item .img{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.image-list .item .addimg{
  background-image: url("data:image/png;base64,");
  background-position: center center;
  background-size: 60% 60%;
  background-repeat: no-repeat;
  background-color: #fff;
  border: 1px #e5e5e5 dashed;
}