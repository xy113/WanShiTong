/* pages/shop/detail.wxss */
.shop-detail{
  display: block;
  background-color: #fff;
}

.shop-detail .shop-image{
  display: block;
  position: relative;
  padding-top: 50%;
}

.shop-detail .shop-image .image{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: block;
}

.shop-detail .shop-info{
  display: block;
}

.shop-detail .shop-info .shop-name{
  font-size: 16px;
  color: #333;
  display: block;
  padding: 10px;
}

.shop-detail .shop-info .row{
  display: flex;
  padding: 15px 10px;
  border-bottom: 0.5px #e2e2e2 solid;
  font-size: 14px;
  color: #777;
}

.shop-detail .shop-info .row .iconfont{
  height: 16px;
  line-height: 16px;
  display: inline-block;
  vertical-align: middle;
  flex: 1;
  width: 20px;
  min-width: 20px;
  max-width: 20px;
}

.shop-detail .shop-info .row .label{
  flex: 1;
  width: 70px;
  min-width: 70px;
  max-width: 70px;
  height: 16px;
  line-height: 16px;
  overflow: hidden;
  display: inline-block;
  vertical-align: middle;
}

.shop-detail .shop-info .row .text{
  flex: 1;
  height: 16px;
  line-height: 16px;
  display: inline-block;
  overflow: hidden;
  vertical-align: middle;
  word-wrap: break-word;
}

.shop-detail .shop-info .row .assory{
  background-image: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAQCAYAAAAf8/9hAAAAQklEQVQ4je3OMQ0AIBBDUaQg4SThpumfTgJSGVkJkLDw9v60lNuAANpRxHY/jgAJxI9MtrukuvsggPzjRZLq9viJAf+cM7UByutWAAAAAElFTkSuQmCC");
  background-repeat: no-repeat;
  width: 16px;
  min-width: 16px;
  max-width: 16px;
  height: 16px;
  float: right;
  margin-top: 5px;
}

.shop-detail .shop-content{
  display: block;
  padding: 10px;
}
.shop-detail .shop-content .title{
  font-size: 16px;
  color: #666;
}

.shop-detail .shop-content .content{
  font-size: 14px;
  color: #666;
  text-align: justify;
  line-height: 1.5;
  display: block;
  padding: 10px 0;
}